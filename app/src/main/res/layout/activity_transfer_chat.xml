<?xml version="1.0" encoding="utf-8"?>
<ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mycolorlogin"
            tools:context=".TransferChat">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

        <include
            android:id="@+id/transferChat_toolbar"
            layout="@layout/app_layout" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line_breaker"
            android:layout_marginStart="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/logoo"
            android:ems="10"
            android:gravity="center"
            android:hint="receiver's no here..."
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:padding="17dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/editText2"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:layout_marginStart="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/logoo"
            android:gravity="center"
            android:ems="10"
            android:hint= "paste chat here..."
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            android:padding="17dp"
            android:textSize="14sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintTop_toBottomOf="@id/editText2"
            tools:targetApi="o"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText2"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/sender_messages_layout"
            android:drawableStart="@drawable/ic_local_airport_black_24dp"
            android:padding="4dp"
            android:text="@string/transfer_message"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_local_airport_black_24dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="111dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="111dp"
            android:layout_marginBottom="50dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/logooo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/powered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#fff"
            android:fontFamily="cursive"
            android:layout_marginTop="5dp"
            android:text="@string/powered"
            android:layout_marginStart="180dp"
            android:layout_below="@id/button2"
            android:layout_marginLeft="180dp" />

        <TextView
            android:id="@+id/line_breaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_below="@id/imageView"/>

    </RelativeLayout>
</ScrollView>